/* pages/accountSettings/accountSettings.wxss */
.title{
  text-align: center;
  font-size: x-large;
  font-weight: bold;
  padding: 20rpx 0;
}
.title1{
  text-align:justify;
  font-size: large;
  padding: 40rpx 0;
}
.button{
  text-align: center;
  position:relative;
}
.change{
  position: relative;
  height: 50rpx;
  width: 50rpx;
  margin-left: 50rpx;
  top: 8rpx;
}

/* 弹窗样式 */
.model{
  position: absolute;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 999;
  opacity: 0.5;
  top: 0;
  left:0;
}
.modalDlg{
  width: 80%;
  position: fixed;
  top:100rpx;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  padding: 55rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modalClose{
	height: 40rpx;
	width: 40rpx;
}
.windowRow{
  display: flex; 
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 15rpx;
  width: 100%;
}
.modalTitle{
  font-size: 42rpx;
  font-weight: bold;
}
.back{
  text-align: center;
  color: #f0a500;
  font-size: 30rpx;
}
.wishPassword{
  width: 100%;
  /* justify-content: center; */
  flex-direction: row;
  display: flex;
  margin: 40rpx 0rpx;
}
.wishInput{
  width: 100%;
  border: #ededef 1rpx solid;
  background-color: #f6f7fb;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  margin: 20rpx 30rpx;
}
.modalConfirm{
  background-color: #fec600;
  text-align: center;
  border-radius: 50rpx;
  padding: 25rpx;
  color: black;
}